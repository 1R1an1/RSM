        <Border VerticalAlignment="Top"
                Padding="5"
                Margin="10,10,10,0"
                Height="300"
                CornerRadius="5"
                BorderBrush="Gray"
                BorderThickness="2">

            <ScrollViewer Visibility="Visible"
                          VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Width" Value="20"/>
                        <Setter Property="Template" Value="{StaticResource VerticalScrollBar}"/>
                    </Style>
                </ScrollViewer.Resources>

                <Grid>
                    <StackPanel x:Name="SP_saves" Orientation="Vertical"/>
                </Grid>
            </ScrollViewer>
        </Border>

        <Button x:Name="btn_deletallsaves" Visibility="Visible" VerticalAlignment="Bottom"
                Style="{StaticResource ButtonStyle}" 
                FontFamily="Consolas" FontSize="14"
                Height="23" Width="220" Margin="0, 0, 0, 77.5" ToolTip="Elimina solo los archivos del programa los del juego no"
                Content="Eliminar todos los archivos" Click="btn_deletallsaves_Click"/>

        <WrapPanel Orientation="Horizontal"  Margin="0,0,0,12.5" Width="220" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button x:Name="Añadir"
                    Style="{StaticResource ButtonStyle}"
                    Foreground="{StaticResource FontColor}"
                    FontSize="15"
                    Padding="7.5, 3.5"
                    Margin="5,0,15,5"
                    Content="Añadir"
                    Click="Añadir_Click"/>

            <Button x:Name="CambiarNombre"
                    Style="{StaticResource ButtonStyle}"
                    Foreground="{StaticResource FontColor}"
                    FontSize="15"
                    Padding="7.5, 3.5"
                    Margin="0,0,0,5"
                    Content="Cambiar nombre"
                    Click="CambiarNombre_Click"/>

            <Button x:Name="Actualizar"
                    Style="{StaticResource ButtonStyle}"
                    Foreground="{StaticResource FontColor}"
                    FontSize="15"
                    Padding="7.5, 3.5"
                    Margin="12.5,0,15,0"
                    Content="Actualizar"
                    Click="Actualizar_Click"/>

            <Button x:Name="Eliminar"
                    Style="{StaticResource ButtonStyle}"
                    Foreground="{StaticResource FontColor}"
                    FontSize="15"
                    Padding="7.5, 3.5"
                    Content="Eliminar"
                    Click="Eliminar_Click"/>
        </WrapPanel>
        
        <!--<Border Visibility="Collapsed" Height="0.75" BorderBrush="DimGray" Background="DimGray" VerticalAlignment="Top" Margin="0,88,0,0"/>-->

