<UserControl x:Class="Rain_save_manager.Views.RenameSaves"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rain_save_manager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="94" d:DesignWidth="400">
    <Grid>
        <Label Style="{StaticResource lblSNT}" Content="Click en X para cancelar" VerticalAlignment="Top"/>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0,20,0,0">
            <TextBox x:Name="txtDato"
                     HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center"
                     Style="{StaticResource TB}" 
                     MaxLength="36"
                     Width="255" Margin="0,0,0,10"/>

            <Button HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    Style="{StaticResource ButtonStyle}" 
                    Foreground="Gray"
                    Width="80" Height="20"
                    Content="Aceptar" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
