<UserControl x:Class="Rain_save_manager.Views.ReplaceSaveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rain_save_manager.Views"
             mc:Ignorable="d"
             d:DesignHeight="94" d:DesignWidth="400">
    <Grid>
        <Label Style="{StaticResource lblSNT}" Content="Click en X para cancelar" VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    Style="{StaticResource ButtonStyle}" 
                    Foreground="Gray" FontSize="13.5"
                    Width="82.5" Height="25" Margin="0,0,50,0"
                    Content="Ranura 1" ToolTip="Remplazaras la ranura 1 por el archivo de guardado seleccionado" Click="Button_Click"/>

            <Button HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    Style="{StaticResource ButtonStyle}" 
                    Foreground="Gray" FontSize="13.5"
                    Width="82.5" Height="25" 
                    Content="Ranura 2" ToolTip="Remplazaras la ranura 2 por el archivo de guardado seleccionado" Click="Button_Click_1"/>

            <Button HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    Style="{StaticResource ButtonStyle}" 
                    Foreground="Gray" FontSize="13.5"
                    Width="82.5" Height="25" Margin="50,0,0,0"
                    Content="Ranura 3" ToolTip="Remplazaras la ranura 3 por el archivo de guardado seleccionado" Click="Button_Click_2"/>
        </StackPanel>
    </Grid>
</UserControl>
